# LabLink Allocator Environment Variables
# Copy this file to .env and fill in your actual values

# AWS Credentials (for Terraform and EC2 operations)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-west-2

# Database Configuration (if different from config.yaml)
DATABASE_URL=postgresql://lablink:CHANGE_ME@localhost:5432/lablink_db

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your_secret_key_here_change_in_production

# GitHub Container Registry (if using private images)
# GITHUB_TOKEN=your_github_pat_here

# Optional: DNS Configuration
# ROUTE53_HOSTED_ZONE_ID=your_hosted_zone_id
